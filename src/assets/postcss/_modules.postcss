.arrow {
    width: 10px;
    height: 10px;
    border-color: transparent #38a6a0 #38a6a0 transparent;
    border-style: solid;
    border-width: 1px;
    transform: rotate(45deg);
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -7px;
    margin-right: 2px;
}
/* Video-modal styles */
.modal-dialog {
      max-width: 800px;
      margin: 50px auto;
  }
.modal-body {
  position:relative;
  padding:0px;
}
.close {
  position:absolute;
  right:-30px;
  top:0;
  z-index:999;
  font-size:2rem;
  font-weight: normal;
  color:#fff;
  opacity:1;
}