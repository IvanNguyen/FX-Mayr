.middle-banner {
    margin: 100px 0;
    @media (max-width: $md-screen) {
        margin: 50px 0;
    }
    position: relative;
    img {
        height: 300px;
        width: auto;
        min-width: 100%;
    }
}
img.lg-screen {
    display: block;
    @media (max-width: $md-screen) {
        display: none;
    }
}
img.md-screen {
    display: none;
    height: 182px;
    width: 100%;
    /* min-width: 100%; */
    @media (max-width: $md-screen) {
        display: block;
    }
}